<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metrafonic.couchdroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.metrafonic.couchdroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.metrafonic.couchdroid.MovieActivity"
            android:label="@string/title_activity_movie" >
        </activity>
        <activity
            android:name="com.metrafonic.couchdroid.TrailerActivity"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.metrafonic.couchdroid.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
