<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/imageViewSearchPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewSearchTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewSearchPoster"
        android:layout_alignBottom="@+id/imageViewSearchPoster"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/imageViewSearchPoster"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textViewSearchTitle"
        android:src="#4e5969" />
</RelativeLayout>