<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e5969">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wanted"
                android:id="@+id/textView"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:id="@+id/relativeLayout"
                android:paddingRight="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/couchnine"
                    android:padding="5dp"
                    android:paddingBottom="20dp">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/horizontalScrollView" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    android:id="@+id/imageViewPoster1"
                                    android:background="@drawable/logobanner"
                                    android:src="#338722" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Small Text"
                                    android:id="@+id/textView3"
                                    android:background="#434342"
                                    android:layout_alignBottom="@+id/imageViewPoster1"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignRight="@+id/imageViewPoster1" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:id="@+id/relativeLayout2"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    android:id="@+id/imageView"
                                    android:background="@drawable/logobanner"
                                    android:src="#338722" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Small Text"
                                    android:id="@+id/textView4"
                                    android:layout_alignBottom="@+id/imageView"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignRight="@+id/imageView"
                                    android:background="#434342" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:id="@+id/relativeLayout3"
                                android:paddingRight="10dp" >

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    android:id="@+id/imageView2"
                                    android:background="@drawable/logobanner"
                                    android:src="#338722" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Small Text"
                                    android:id="@+id/textView5"
                                    android:layout_alignBottom="@+id/imageView2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignRight="@+id/imageView2"
                                    android:background="#434342" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:id="@+id/relativeLayout4">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="150dp"
                                    android:id="@+id/imageView3"
                                    android:background="@drawable/logobanner"
                                    android:src="#338722" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Small Text"
                                    android:id="@+id/textView6"
                                    android:background="#434342"
                                    android:layout_alignBottom="@+id/imageView3"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignRight="@+id/imageView3" />
                            </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Server:"
                android:id="@+id/textView2"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="false"
                android:textSize="30dp" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2" />
</LinearLayout>